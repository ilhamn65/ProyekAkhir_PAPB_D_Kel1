<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_marginTop="159dp"
        android:layout_width="308dp"
        android:layout_height="80dp"
        android:src="@drawable/login_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/login_masuk"
        android:layout_marginTop="48dp"
        android:layout_marginRight="209dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/login_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/login_email"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_email"
        app:layout_constraintTop_toBottomOf="@+id/login_masuk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_marginTop="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_password"
        app:layout_constraintTop_toBottomOf="@+id/login_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/login_btnmasuk"
        android:layout_marginTop="10dp"
        android:layout_width="284dp"
        android:layout_height="59dp"
        android:background="@drawable/login_btnmasuk"
        app:layout_constraintTop_toBottomOf="@+id/login_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/login_atau"
        android:layout_marginTop="13dp"
        android:layout_width="143dp"
        android:layout_height="23dp"
        android:text="Atau, masuk dengan ..."
        android:textSize="13dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/login_btnmasuk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/login_google"
        android:layout_marginTop="31dp"
        android:layout_width="125dp"
        android:layout_height="36dp"
        android:background="@drawable/login_google"
        app:layout_constraintTop_toBottomOf="@+id/login_atau"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/login_anda"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda belum memiliki akun?"
        android:textSize="13dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/login_google"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/login_daftar"
        android:layout_width="49.81dp"
        android:layout_height="23dp"
        android:background="@drawable/login_daftar"
        app:layout_constraintTop_toBottomOf="@+id/login_google"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>